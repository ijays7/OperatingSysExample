<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/current_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:text="当前进程名;"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/process_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/current_process"
        android:paddingLeft="3dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/pass_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_process"
        android:layout_marginTop="10dp"
        android:hint="请输入需要传递的数据"
        android:maxEms="30"
        android:maxLines="3"
        android:textSize="14sp" />

    <Button
        android:id="@+id/multi_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_data"
        android:layout_marginTop="10dp"
        android:text="@string/multi_process" />
    <Button
        android:id="@+id/share_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="文件共享IPC"
        android:layout_below="@id/multi_process"/>
    <Button
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="test"
        android:layout_below="@id/share_file"/>

</RelativeLayout>
